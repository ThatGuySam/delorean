{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start terminals",
      "dependsOn": ["Dev Commands", "New Terminal"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      // The name that shows up in terminal tab
      "label": "Dev Commands",
      // The task will launch a shell
      "type": "shell",
      "command": "bun dev", // use same name as in package.json
      // Mark as a background task to avoid the spinner animation on the terminal tab`
      // "isBackground": true,
      // Create the tasks in a terminal group
      "presentation": {
        "group": "dev-default"
      }
    },
    {
      // The name that shows up in terminal tab
      "label": "New Terminal",
      "type": "process",
      "command": "/bin/zsh",
      "problemMatcher": [],
      "group": {
        "kind": "none",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "focus": true,
        "reveal": "always",
        "group": "dev-default"
      }
    }
  ]
}
